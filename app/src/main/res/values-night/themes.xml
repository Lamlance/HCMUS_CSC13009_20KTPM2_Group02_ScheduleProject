<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="Theme.ScheduleProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">#006d3b</item>
    <item name="colorPrimaryVariant">#006d3b</item>
    <item name="colorOnPrimary">#ffffff</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">#4f6353</item>
    <item name="colorSecondaryVariant">#4f6353</item>
    <item name="colorOnSecondary">#ffffff</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <!-- Customize your theme here. -->
  </style>

  <!-- Night mode -->
  <!-- Screen background if dark mode is on-->
  <style name="TIMER_SCREEN">
    <item name="android:background">#0f0f0f</item>
    <item name="backgroundTint">#0f0f0f</item>
  </style>

  <style name="CALENDAR_SCREEN">
    <item name="android:background">#0f0f0f</item>
    <item name="backgroundTint">#0f0f0f</item>
  </style>

  <style name="REPORT_SCREEN">
    <item name="android:background">#0f0f0f</item>
    <item name="backgroundTint">#0f0f0f</item>
  </style>

  <!-- Text color if dark mode is on-->
  <style name="TEXT">
    <item name="android:textColor">#AAAAAA</item>
  </style>

  <!-- Button background and text color if dark mode is on-->
  <style name="BUTTON">
    <item name="android:backgroundTint">#2E2E2E</item>
    <item name="android:textColor">#E6E6E6</item>
  </style>

  <!-- Image button background if dark mode is on-->
  <style name="IMAGE_BUTTON">
    <item name="android:backgroundTint">#2E2E2E</item>
    <item name="backgroundColor">#2E2E2E</item>
  </style>

  <!-- Navigation header background if dark mode is on-->
  <style name="NAV">
    <item name="android:background">#0f0f0f</item>
  </style>
</resources>