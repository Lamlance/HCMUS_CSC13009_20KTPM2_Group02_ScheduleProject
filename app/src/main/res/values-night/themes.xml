<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="Theme.ScheduleProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">#9f3e41</item>
    <item name="colorOnPrimary">#ffffff</item>
    <item name="colorPrimaryContainer">#ffdad8</item>
    <item name="colorOnPrimaryContainer">#410007</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">#e6bdbb</item>
    <item name="colorOnSecondary">#ffffff</item>
    <item name="colorSecondaryContainer">#ffdad8</item>
    <item name="colorOnSecondaryContainer">#ffdad8</item>
    <!--    Tertiary brand color -->
    <item name="colorTertiary">#745a2f</item>
    <item name="colorOnTertiary">#412d05</item>
    <item name="colorTertiaryContainer">#5a4319</item>
    <item name="colorOnTertiaryContainer">#ffdeac</item>
    <!--    Error brand color -->
    <item name="colorError">#ffb4ab</item>
    <item name="colorOnError">#690005</item>
    <item name="colorErrorContainer">#93000a</item>
    <item name="colorOnErrorContainer">#ffdad6</item>
    <!--    Background brand color -->
    <item name="backgroundColor">#201a1a</item>
    <item name="colorOnBackground">#ede0df</item>
    <item name="colorSurface">#201a1a</item>
    <item name="colorOnSurface">#ede0df</item>
    <!--    Outline brand color -->
    <item name="colorOutline">#a08c8b</item>
    <item name="colorSurfaceVariant">#524342</item>
    <item name="colorOnSurfaceVariant">#d7c1c0</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor">@color/black</item>
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <!-- Customize your theme here. -->
  </style>

  <!-- Light mode -->
  <!-- Screen background if dark light is on-->
  <style name="TIMER_SCREEN">
    <item name="android:background">?attr/backgroundColor</item>
  </style>

  <style name="REPORT_SCREEN">
    <item name="android:background">?attr/backgroundColor</item>
  </style>

  <style name="CALENDAR_SCREEN">
    <item name="android:background">?attr/backgroundColor</item>
  </style>

  <!-- Text background if light mode is on-->
  <style name="TEXT">
    <item name="android:textColor">?attr/colorOnBackground</item>
  </style>

  <!-- Image button background if dark mode is on-->
  <style name="IMAGE_BUTTON">
    <item name="android:backgroundTint">?attr/colorOnBackground</item>
    <item name="android:tint">?attr/colorOnBackground</item>
  </style>

  <!-- Button background if light mode is on-->
  <style name="BUTTON">
    <item name="android:textColor">?attr/colorOnBackground</item>
  </style>

  <style name="NAV_BUTTON">
    <item name="android:background">?attr/colorPrimary</item>
    <item name="backgroundTint">?attr/colorPrimary</item>
  </style>
</resources>