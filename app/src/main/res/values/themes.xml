<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="Theme.ScheduleProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">#006d3b</item>
    <item name="colorPrimaryVariant">#006d3b</item>
    <item name="colorOnPrimary">#ffffff</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">#4f6353</item>
    <item name="colorSecondaryVariant">#4f6353</item>
    <item name="colorOnSecondary">#ffffff</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <!-- Customize your theme here. -->
  </style>

  <!-- Light mode -->
  <!-- Screen background if dark light is on-->
  <style name="TIMER_SCREEN">
    <item name="android:background">#E06060</item>
  </style>

  <style name="REPORT_SCREEN">
    <item name="android:background">#FFFFFF</item>
  </style>

  <style name="CALENDAR_SCREEN">
    <item name="android:background">#FFFFFF</item>
  </style>

  <!-- Text background if light mode is on-->
  <style name="TEXT">
    <item name="android:textColor">#2E2E2E</item>
  </style>

  <!-- Image button background if dark mode is on-->
  <style name="IMAGE_BUTTON">
    <item name="android:backgroundTint">#E6E6E6</item>
    <item name="backgroundColor">#2E2E2E</item>
    <item name="android:tint">#AAAAAA</item>
  </style>

  <!-- Button background if light mode is on-->
  <style name="BUTTON">
    <item name="android:textColor">#FFF</item>
  </style>

  <style name="NAV_BUTTON">
    <item name="android:background">#AA4646</item>
    <item name="backgroundTint">#AA4646</item>
  </style>
</resources>