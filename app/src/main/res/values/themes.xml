<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="Theme.ScheduleProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">#006d3b</item>
    <item name="colorPrimaryVariant">#006d3b</item>
    <item name="colorOnPrimary">#ffffff</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">#4f6353</item>
    <item name="colorSecondaryVariant">#4f6353</item>
    <item name="colorOnSecondary">#ffffff</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <!-- Customize your theme here. -->
  </style>

  <!-- Light mode -->
  <!-- Screen background if dark light is on-->
  <style name="SCREEN">
    <item name="android:background">#FFFFFF</item>
  </style>

  <!-- Text background if light mode is on-->
  <style name="TEXT">
    <item name="android:textColor">#000</item>
  </style>

  <!-- Button background if light mode is on-->
  <style name="BUTTON">
    <item name="android:textColor">#FFF</item>
  </style>
</resources>